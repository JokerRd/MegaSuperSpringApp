<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Первая страница">
  <datasources>
    <datasource id="tableData" query-id="table"/>
    <datasource id="formData" query-id="form">
      <filters>
        <eq field-id="id" value="4"/>
      </filters>
    </datasource>
  </datasources>
  <regions>
    <form datasource="formData">
      <fields>
        <output-text id="name"/>
        <output-text id="date"/>
        <input-text id="test" default-value="${app.const}"/>
      </fields>
    </form>
    <table selection="none" datasource="tableData">
<!--      <datasource query-id="data" size="3"/>-->
      <filters>
        <input-text id="id" label="Фильтр по id"/>
      </filters>
      <columns>
        <column text-field-id="id" label="№"/>
        <column text-field-id="nameT" label="Фамилия И.О"/>
        <column text-field-id="date" label="Дата рождения"/>
      </columns>
      <pagination/>
    </table>
  </regions>
</page>